@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    Layout = "~/Views/Shared/NewLayout.cshtml";
    
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">🔐 Manage Roles</h3>
            <a asp-action="New" class="btn btn-light btn-sm fw-bold">
                + Add New Role
            </a>
        </div>

        <div class="card-body bg-white rounded-bottom-4">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-success">
                            <tr>
                                <th style="width: 60%">Role Name</th>
                                <th style="width: 40%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@role.Name</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-warning btn-sm px-3">
                                                ✏️ Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger btn-sm px-3">
                                                🗑️ Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center rounded-3">
                    No roles found.
                </div>
            }

            <div class="mt-4 d-flex justify-content-between align-items-center">
                <span class="text-muted fst-italic">Total Roles: @Model.Count</span>

                <a asp-controller="Home" asp-action="AdminPanel" class="btn btn-outline-secondary">
                    🔙 Back to Admin Panel
                </a>
            </div>
        </div>
    </div>
</div>
