@model List<Bookify.ViewModels.BookingDetailsVM.BookingDetailVM>

@{
    Layout = "~/Views/Shared/NewLayout.cshtml";
    ViewData["Title"] = "Booking Details";
}

<head>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
        body {
            background-color: #e6f5ea;
        }

        .ticket-card {
            border-radius: 0.8rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .ticket-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
            }

            .ticket-card .card-body {
                background: #f9fcfa;
                border-radius: 0.8rem;
            }

        .ticket-label {
            font-weight: 600;
            color: #1b4332;
        }

        .ticket-value {
            font-size: 0.95rem;
            color: #495057;
        }

        .stat-pill {
            font-size: 0.85rem;
            padding: 0.35rem 0.8rem;
            border-radius: 999px;
            font-weight: 600;
            display: inline-block;
        }

            .stat-pill.price {
                background-color: #198754;
                color: #fff;
            }

            .stat-pill.qty {
                background-color: #f77f00;
                color: #fff;
            }

            .stat-pill.total {
                background-color: #0077b6;
                color: #fff;
            }

        .btn-back {
            background-color: transparent;
            border: 2px solid #198754;
            color: #198754;
            font-weight: 600;
            padding: 10px 30px;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: #198754;
                color: white;
            }
    </style>
</head>

<div class="container mt-5">
    <h2 class="mb-4 text-success fw-bold">📋 Booking Details Overview</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col" data-aos="fade-up">
                <div class="card shadow-sm border-0 h-100 ticket-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold mb-3">@item.EventName</h5>

                        <p class="mb-1"><span class="ticket-label">🏷️ Category:</span> <span class="ticket-value">@item.CategoryName</span></p>
                        <p class="mb-1"><span class="ticket-label">🎫 Ticket Type:</span> <span class="ticket-value">@item.TicketTypeName</span></p>
                        <p class="mb-1"><span class="ticket-label">💵 Price per Ticket:</span> <span class="ticket-value">@item.PricePerTicket EGP</span></p>
                        <p class="mb-1"><span class="ticket-label">🔢 Quantity:</span> <span class="ticket-value">@item.Quantity</span></p>
                        <p class="mb-3"><span class="ticket-label">💰 Total Price:</span> <span class="ticket-value fw-bold text-success">@item.TotalPrice EGP</span></p>
 
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                        @*     <span class="stat-pill price">💵 @item.PricePerTicket EGP</span> *@
                            <span class="stat-pill qty">🎟️ x @item.Quantity</span>
                            <span class="stat-pill total">💰 @item.TotalPrice EGP</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Index" asp-controller="Booking" class="btn btn-back shadow-sm">
            ⬅️ Back to Bookings
        </a>
    </div>
</div>
<!-- AOS JS -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 600, // وقت الحركة بالملي ثانية
        easing: 'ease-in-out', // نوع الانيميشن
        once: true // تظهر مرة واحدة فقط عند أول scroll
    });
</script>
