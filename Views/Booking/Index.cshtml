@model List<Bookify.ViewModels.BookingVM.BookingListItemVM>

@{
    Layout = "~/Views/Shared/NewLayout.cshtml";
    ViewData["Title"] = "Manage Bookings";
    var search = ViewBag.Search as string;
}
<head>
    <link rel="stylesheet" href="/css/Booking/Booking.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .booking-container {
            padding: 40px 0;
            background-color: #f3fdf7;
            min-height: 100vh;
        }

        .booking-inner-box {
            max-width: 1000px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        }

        h2 {
            color: #198754;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .btn-green {
            background-color: #198754;
            color: white;
            font-weight: 500;
            border-radius: 8px;
        }

        .btn-green:hover {
            background-color: #157347;
        }

        .table thead {
            background-color: #198754;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #e8f8f0;
            transition: background-color 0.2s ease;
        }

        .back-btn {
            margin-top: 40px;
        }
    </style>
</head>

<div class="booking-container">
    <div class="booking-inner-box">
        <h2 class="text-center mb-4">
            📋 All Bookings
        </h2>

        <form method="get" class="d-flex gap-2 mb-4">
            <input type="text" name="search" value="@search" placeholder="Search by user..." class="form-control shadow-sm" />
            <button type="submit" class="btn btn-green">
                <i class="bi bi-search"></i> Search
            </button>
        </form>

        <table class="table table-bordered table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>User Name</th>
                    <th>Booking Date</th>
                    <th>Booking Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.BookingDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.BookingDate.ToString("hh:mm tt")</td>
                        <td>
                            <a class="btn btn-green btn-sm"
                               asp-controller="BookingDetail"
                               asp-action="Index"
                               asp-route-BookingId="@item.Id">
                                <i class="bi bi-info-circle me-1"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center back-btn">
            <a asp-action="AdminPanel" asp-controller="Home" class="btn btn-outline-success px-4 py-2 fw-bold rounded-pill shadow-sm">
                🔙 Back to Panel
            </a>
        </div>
    </div>
</div>
