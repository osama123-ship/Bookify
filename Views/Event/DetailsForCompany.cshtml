@model Bookify.ViewModels.EventVM.EventToViewVM

@{
    Layout = "~/Views/Shared/NewLayout.cshtml";
    ViewData["Title"] = "DetailsForEvent";
}

<h1>DetailsForEvent</h1>

<h4>Event</h4>
<hr />
<div class="container my-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0">@Model.Title</h3>
        </div>
        <div class="card-body">
        <form asp-action="DetailsForEvent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StartBookingTime" class="control-label"></label>
                <input asp-for="StartBookingTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndBookingTime" class="control-label"></label>
                <input asp-for="EndBookingTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-action="New" asp-controller="TicketType" asp-route-EventId="@Model.Id">AddTicketType</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
